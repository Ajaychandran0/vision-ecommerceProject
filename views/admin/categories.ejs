<section>
    <div class="container">



        <div class="row mt-4">
            <h2 class="text-center">Add Category</h2>
            <form action="/admin/add-category" method="post">

                <label for="">Category</label>

                <% if(errorMessage){ %>
                    <p class="text-danger"><%= errorMessage %> </p>
                  <% } %>  

                    <input type="text" name="category" class="form-control" required>

                
                <button type="submit" class="btn btn-success mt-4 mb-4" style="width: 10em;"> Add </button>
                </form>
           
        </div>

        <table id="example" class="table table-striped" style="width: 100%" >

            <thead style="background-color: #1d4039;">
                <tr>
                    <th style="color: white;" scope="col">No.</th>
                    <th style="color: white;" scope="col">Category</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody style="border-color: #1d4039;">
                <% for(var i=0;i<categories.length;i++){ %> 
                <tr>
                    <th scope="row"><%= i+1 %> </th>
                    <td><%= categories[i].category %></td>
                    
                    <td><a onclick="deleteCategory('<%= categories[i]._id %>')" class="btn btn-danger" style="color: white;">Delete</a></td>

                </tr>
                

                <% } %> 

            </tbody>
        </table>
    </div>
</section>