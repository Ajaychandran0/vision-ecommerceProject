<section class="container mt-4 ">
    <div >

        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-md-10 ">
                <h2 class="text-center m-5">Add Product</h2>
                <br>

                <!-- form -->
                <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Brand Name</label>
                            <input type="text" class="form-control" placeholder="Brand" name="brand" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Product name</label>
                            <input type="text" class="form-control" placeholder="name" name="name" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label>Category</label>
                            <select class="form-control" name="category" , required>
                                <option value="" class="text-secondary" hidden>choose a category ...</option>
                                <% for(i=0;i<categories.length;i++){ %> 
                                    <option value="<%= categories[i].category %> "><%=categories[i].category %> </option>
                                <% } %> 
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label >inStock</label>
                            <input type="number" class="form-control" name="stock" required>
                        </div>

                    </div>
                    

                    <div class="form-row justify-content-between">
                        <div class="form-group col-md-4">
                            <label for="inputPrice">Price</label>
                            <input type="number" step="0.01" class="form-control" name="price"  required>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Frame size</label>
                            <select class="form-control" name="size" required>
                                <option value="" hidden>Choose a size...</option>
                                <option value="<%=categories.category %> " class="text-primary"><%=categories.category %> </option>
                                <option value="small">small</option>
                                <option value="medium">medium</option>
                                <option value="large">large</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Frame color</label>
                            <input type="text" class="form-control" name="color">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Product description</label>
                        <textarea class="form-control"  name="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Image</label>
                        <input type="file" name="image" class="form-control" required>                                                
                    </div>

                    <div class="d-flex justify-content-center mb-5">
                        <button type="submit" class="btn btn-success w-50 mt-3 ">Add</button>                        
                    </div>
                    

                   
                </form>
            </div>
        </div>

    </div>
</section>