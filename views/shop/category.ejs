<div class="colorlib-product">    
    
    <div class="container ">

        <% if(products[0]){ %> 
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">

                <h2><%= products[0].category %> </h2>
            </div>
        </div>


        <div class="row row-pb-md">
            <% for(let product of products){ %>
                <div class="col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="/product/<%= product._id %>" class="prod-img">
                            <img src="/images/product-images/<%= product._id %>.webp" class="img-fluid"
                                alt="image">
                        </a>
                        <div class="desc">
                            <h2><a href="/product/<%= product._id %>">
                                    <%= product.brand %>
                                </a></h2>

                            <span class="price">Rs. <%= product.price %></span>

                            <button onclick="addToCart('<%=product._id %>')" class="btn btn-primary">Add to
                                cart</button>
                        </div>
                    </div>
                </div>
                <% } %>

        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <p><a href="/" class="btn btn-primary btn-lg">All products</a></p>
            </div>
        </div>

        <% }else{ %> 

            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">

                <h2>No Products Available </h2>
            </div>
        <% } %> 
    </div>
</div>